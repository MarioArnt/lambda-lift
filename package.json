{
  "name": "lambda-lift",
  "version": "0.1.0",
  "description": "A utility to streamline AWS Lambda function deployments",
  "packageManager": "pnpm@10.28.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marnautoupages/lambda-lift.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "deployment",
    "serverless",
    "cli"
  ],
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "bin": {
    "lambda-lift": "lib/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "pkg": "pkg . --out-path dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "pkg": {
    "scripts": "lib/**/*.js",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.504.0",
    "@aws-sdk/client-s3": "^3.504.0",
    "archiver": "^7.0.1",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^5.1.1",
    "fast-glob": "^3.3.2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
